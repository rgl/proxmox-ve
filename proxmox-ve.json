{
  "variables": {
    "disk_size": "15375",
    "iso_url": "http://download.proxmox.com/iso/proxmox-ve_6.4-1.iso",
    "iso_checksum": "sha256:ab71b03057fdeea29804f96f0ff4483203b8c7a25957a4f69ed0002b5f34e607",
    "hyperv_switch_name": "{{env `HYPERV_SWITCH_NAME`}}",
    "hyperv_vlan_id": "{{env `HYPERV_VLAN_ID`}}"
  },
  "builders": [
    {
      "name": "proxmox-ve-amd64-libvirt",
      "type": "qemu",
      "accelerator": "kvm",
      "cpus": 2,
      "memory": 2048,
      "qemuargs": [
        ["-cpu", "host"]
      ],
      "headless": true,
      "http_directory": ".",
      "format": "qcow2",
      "disk_size": "{{user `disk_size`}}",
      "disk_interface": "virtio-scsi",
      "disk_discard": "unmap",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_timeout": "60m",
      "boot_wait": "5s",
      "boot_command": [
        "<enter>",
        "<wait1m>",
        "<enter><wait>",
        "<enter><wait>",
        "United S<wait>t<wait>a<wait>t<wait>e<wait>s<wait><enter><wait><tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<enter><wait5>",
        "vagrant<tab><wait>",
        "vagrant<tab><wait>",
        "pve@example.com<tab><wait>",
        "<tab><wait>",
        "<enter><wait5>",
        "pve.example.com<tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<enter><wait5>",
        "<enter><wait5>"
      ],
      "shutdown_command": "poweroff"
    },
    {
      "name": "proxmox-ve-amd64-virtualbox",
      "type": "virtualbox-iso",
      "guest_os_type": "Debian_64",
      "guest_additions_mode": "attach",
      "headless": true,
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "2048"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"],
        ["modifyvm", "{{.Name}}", "--nested-hw-virt", "on"],
        ["modifyvm", "{{.Name}}", "--vram", "16"],
        ["modifyvm", "{{.Name}}", "--graphicscontroller", "vmsvga"],
        ["modifyvm", "{{.Name}}", "--audio", "none"],
        ["modifyvm", "{{.Name}}", "--nictype1", "82540EM"],
        ["modifyvm", "{{.Name}}", "--nictype2", "82540EM"],
        ["modifyvm", "{{.Name}}", "--nictype3", "82540EM"],
        ["modifyvm", "{{.Name}}", "--nictype4", "82540EM"]
      ],
      "vboxmanage_post": [
        ["storagectl", "{{.Name}}", "--name", "IDE Controller", "--remove"]
      ],
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_interface": "sata",
      "hard_drive_discard": true,
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_timeout": "60m",
      "boot_wait": "5s",
      "boot_command": [
        "<enter>",
        "<wait1m>",
        "<enter><wait>",
        "<enter><wait>",
        "United S<wait>t<wait>a<wait>t<wait>e<wait>s<wait><enter><wait><tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<enter><wait5>",
        "vagrant<tab><wait>",
        "vagrant<tab><wait>",
        "pve@example.com<tab><wait>",
        "<tab><wait>",
        "<enter><wait5>",
        "pve.example.com<tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<enter><wait5>",
        "<enter><wait5>"
      ],
      "shutdown_command": "poweroff"
    },
    {
      "name": "proxmox-ve-amd64-hyperv",
      "type": "hyperv-iso",
      "temp_path": "tmp",
      "headless": true,
      "generation": 2,
      "enable_virtualization_extensions": true,
      "enable_mac_spoofing": true,
      "cpus": 2,
      "memory": 2048,
      "switch_name": "{{user `hyperv_switch_name`}}",
      "vlan_id": "{{user `hyperv_vlan_id`}}",
      "disk_size": "{{user `disk_size`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_timeout": "60m",
      "first_boot_device": "DVD",
      "boot_order": ["SCSI:0:0"],
      "boot_wait": "5s",
      "boot_command": [
        "<enter>",
        "<wait1m>",
        "<enter><wait>",
        "<enter><wait>",
        "United S<wait>t<wait>a<wait>t<wait>e<wait>s<wait><enter><wait><tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<enter><wait5>",
        "vagrant<tab><wait>",
        "vagrant<tab><wait>",
        "pve@example.com<tab><wait>",
        "<tab><wait>",
        "<enter><wait5>",
        "pve.example.com<tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<tab><wait>",
        "<enter><wait5>",
        "<enter><wait5>",
        "<wait4m>",
        "root<enter>",
        "<wait5>",
        "vagrant<enter>",
        "<wait5>",
        "rm -f /etc/apt/sources.list.d/pve-enterprise.list<enter>",
        "apt-get update<enter>",
        "<wait1m>",
        "apt-get install -y hyperv-daemons<enter>"
      ],
      "shutdown_command": "poweroff"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "expect_disconnect": true,
      "scripts": [
        "upgrade.sh",
        "provision.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{.BuildName}}.box",
      "vagrantfile_template": "Vagrantfile.template"
    }
  ]
}
